<Layout title="Friends of the Foundation">
  <!-- Hero -->
  <section class="bg-gradient-to-b from-stone-950 to-stone-900 text-white py-16 md:py-24">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <p class="text-accent-400 font-medium uppercase tracking-wider text-sm mb-4">
        Our Supporters
      </p>
      <h1 class="font-display text-display-md md:text-display-lg text-white mb-6">
        Friends of the Foundation
      </h1>
      <p class="text-xl text-stone-300 leading-relaxed">
        The generous investment of our donors powers our movement to pioneer new orthopaedic 
        treatments that accelerate healing, enabling people to stay active through research, 
        development, innovation, and education.
      </p>
    </div>
  </section>

  <!-- Visionary Donors ($500,000+) -->
  <section class="py-16 bg-gradient-to-b from-stone-900 to-stone-800">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <div class="inline-flex items-center gap-2 px-5 py-2.5 bg-accent-500/20 text-accent-300 rounded-full mb-4 border border-accent-500/30">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
        </svg>
        <span class="font-semibold">Visionary Donors</span>
      </div>
      <p class="text-accent-400 font-display text-xl mb-10">$500,000+</p>
      <div class="flex flex-wrap justify-center gap-6">
        {donorTiers[0].donors.map((donor) => (
          <div class="relative bg-gradient-to-br from-stone-700 to-stone-800 px-10 py-8 rounded-sm border border-accent-500/40 shadow-[0_0_30px_rgba(235,107,71,0.15)] hover:shadow-[0_0_40px_rgba(235,107,71,0.25)] transition-all duration-300">
            <p class="font-display text-2xl text-white">{donor}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Leadership Circle ($100,000 - $499,999) -->
  <section class="py-16 bg-gradient-to-b from-stone-800 to-stone-700">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-stone-600 text-stone-200 rounded-full mb-4 border border-stone-500">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
        </svg>
        <span class="font-semibold">Leadership Circle</span>
      </div>
      <p class="text-stone-300 font-display text-lg mb-8">$100,000 – $499,999</p>
      <div class="flex flex-wrap justify-center gap-4">
        {donorTiers[1].donors.map((donor) => (
          <div class="bg-stone-600/80 border border-stone-500 px-5 py-3 rounded-sm hover:bg-stone-600 transition-all duration-300">
            <p class="font-medium text-white">{donor}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefactors ($50,000 - $99,999) -->
  <section class="py-14 bg-gradient-to-b from-stone-700 to-stone-500">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-stone-400/30 text-stone-100 rounded-full mb-4 border border-stone-400/50">
        <span class="font-semibold">Benefactors</span>
      </div>
      <p class="text-stone-200 font-display text-lg mb-8">$50,000 – $99,999</p>
