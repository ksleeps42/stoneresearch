        {donorTiers[2].donors.map((donor) => (
          <span class="px-4 py-2 bg-stone-400/30 border border-stone-400/50 text-white rounded-sm font-medium hover:bg-stone-400/50 transition-colors">{donor}</span>
        ))}
      </div>
    </div>
  </section>

  <!-- Partners ($25,000 - $49,999) -->
